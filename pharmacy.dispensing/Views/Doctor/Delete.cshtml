}


<h3>Are you sure you want to delete this?</h3>
<fieldset>
    
    <div class="display-label">Practice</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Practice.PracticeName)
    </div>

    <div class="display-label">Title</div>
