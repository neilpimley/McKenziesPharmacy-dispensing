@model Pharmacy.DAL.Practice

@{
    ViewBag.Title = "Delete Practice";
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}

<h3>Are you sure you want to delete this?</h3>
<fieldset>

    <div class="display-label">PracticeName</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PracticeName)
    </div>

    <div class="display-label">Address</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Address.AddressLine1)
    </div>

    <div class="display-label">EmailAddress</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.EmailAddress)
    </div>

    <div class="display-label">CreatedOn</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CreatedOn)
    </div>

    <div class="display-label">ModifiedOn</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ModifiedOn)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" class="btn btn-danger active"/> |
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary active" })
    </p>
}
