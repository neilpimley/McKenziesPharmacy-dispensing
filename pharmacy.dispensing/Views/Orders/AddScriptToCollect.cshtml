@model Pharmacy.dispensing.Models.AddScriptModel

@{
    ViewBag.Title = "Add Script to Collect";
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}

@Html.Partial("_Menu")

 
@using (Html.BeginForm("AddScriptToCollect", "Orders", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary(true)
    @Html.Hidden("Script_OrderID", Guid.Empty)

    <div class="form-group">
	    <label class="col-md-3 control-label">@Html.LabelFor(model => model.Script.Customer)</label>
	    <div class="col-md-2">
             @Html.DropDownListFor(m => Model.TitleID, Model.Titles, "--choose--", new { @class="form-control" })
             @Html.ValidationMessageFor(m => m.TitleID, "Please choose a title")
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.Script.Customer, new { @class="form-control" })
            @Html.ValidationMessageFor(m => m.Script.Customer, "Please enter the customers name")
        </div>
    </div>

    <div class="form-group">
	    <label class="col-md-3 control-label">@Html.LabelFor(model => model.Script.CustomerAddress)</label>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.Script.CustomerAddress, new { @class = "form-control", required = "" })
            @Html.ValidationMessageFor(m => m.Script.CustomerAddress, "Please enter a customers address")
        </div>
    </div>

    <div class="form-group">
    	<label class="col-md-3 control-label">@Html.LabelFor(model => model.Script.DoctorID, "Doctor")</label>
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.Script.DoctorID, Model.Doctors, "--choose--", new { @class = "form-control", required = "" })
            @Html.ValidationMessageFor(m => m.Script.DoctorID, "Please select a doctor")
        </div>
    </div>


        <div class="form-group">
	        <label class="col-md-3 control-label">@Html.LabelFor(model => model.Script.ShopID, "Shop")</label>
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.Script.ShopID, Model.Shops, "--choose--", new { @class = "form-control", required="" })
                @Html.ValidationMessageFor(m => m.Script.DoctorID, "Please select a shop")
            </div>
        </div>
    
        <div class="form-group">
	        <label class="col-md-3 control-label">@Html.LabelFor(model => model.Driver, "Driver")</label>
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.Driver, Model.Drivers, "--choose--", new { @class = "form-control", required = "" })
                @Html.ValidationMessageFor(m => m.Script.DoctorID, "Please select a driver")
               
            </div>
        </div>
        
        <div class="form-group">
	        <label class="col-md-3 control-label"> Send alert?</label>
            <div class="col-md-4">
                <label class="checkbox0inline">
                    @Html.EditorFor(model => model.SendAlert) 
                </label>
            </div>
        </div>

        <div class="form-group">
	        <label class="col-md-3 control-label">@Html.LabelFor(model => model.Script.NumItems, "Number of items")</label>
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.Script.NumItems, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Script.NumItems, "Please enter number of items as numbers only")
            </div>
        </div>

        <div class="form-group">
	        <label class="col-md-3 control-label">@Html.LabelFor(model => model.Script.Notes, "Notes")</label>
            <div class="col-md-7">
                @Html.TextAreaFor(model => model.Script.Notes, new { @class = "form-control" })
            </div>
        </div>  

        <div class="form-group">
			<div class="col-md-offset-3 col-md-6">
		    <button type="submit" class="btn btn-success">Save</button>
        </div>
        </div>
    
}

@section PageSpecificJavascript {
    

}
